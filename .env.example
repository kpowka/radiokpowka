# ==========================
# Backend
# ==========================
PORT=8080

# DB_DIALECT: sqlite | postgres | mysql
DB_DIALECT=sqlite
# SQLite example:
DB_DSN=file:radiokpowka.db?_foreign_keys=on
# Postgres example:
# DB_DSN=host=postgres user=rk password=rk dbname=rk port=5432 sslmode=disable TimeZone=UTC
# MySQL example:
# DB_DSN=rk:rk@tcp(mysql:3306)/rk?charset=utf8mb4&parseTime=True&loc=UTC

JWT_SECRET=change_me_super_secret

# CORS
CORS_ORIGINS=http://localhost:5173

# Seed owner (создаётся при старте, если отсутствует)
ADMIN_USERNAME=admin
ADMIN_PASSWORD=admin123

# Защита webhook донатов (если пусто — проверка отключена)
WEBHOOK_SECRET=change_me_webhook_secret

# yt-dlp / ffmpeg пути (для контейнера обычно оставляют как есть)
YTDLP_PATH=yt-dlp
FFMPEG_PATH=ffmpeg

# ==========================
# Twitch bot (опционально)
# ==========================
RUN_TWITCH_BOT=false

# Ник бота (обычно совпадает с аккаунтом, который выдал OAuth)
TWITCH_NICK=your_bot_nick
# OAuth token вида: oauth:xxxxxxxxxxxxxxxxxxxx
TWITCH_OAUTH_TOKEN=oauth:xxxxxxxxxxxxxxxxxxxx
# Канал без # (например: kpowka)
TWITCH_CHANNEL=your_channel

# Анти-спам настройки
TWITCH_SPAM_ENABLED=true
TWITCH_SPAM_MAX=5
TWITCH_SPAM_DELAY_MS=900
TWITCH_GLOBAL_RATE_LIMIT_PER_MIN=18

# ==========================
# Frontend (Vite)
# ==========================
# Эти переменные НЕ читаются бэком.
# Их нужно положить в frontend/.env (пример в README)
VITE_API_BASE=http://localhost:8080
VITE_WS_URL=ws://localhost:8080/ws
VITE_STREAM_URL=http://localhost:8080/stream
